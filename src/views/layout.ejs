<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>2020 oficios - <%-nombrePagina%></title>
  <link rel="icon" type="image/png" href="/img/favicon.ico" />
  <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/dist/main.css">
  <link rel="stylesheet" href="/css/validation-form.css">
</head>
<body id="wrapper" class="toggled">
<div id="overlay" class=""></div>
    <nav class="navbar navbar-expand-lg navigation">
      <a class="navbar-brand img" href="/"><img src="/img/2020-oficios-blanco.png" alt=""></a>
      <div class="collapse collapse-navigation-menu navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav navigation-menu">
          <% if(locals.usuario.user){ %> 
            <%- include('partials/nav-autenticado.ejs') %> 
          <% }else{ %>
            <%- include('partials/nav-no-autenticado.ejs') %> 
          <% } %> 
        </div>
      </div>
      <button class="btn display-sm-block" id="smSider">
        <i class="fas fa-bars"></i>
      </button>
    </nav>

  <!-- sidebar -->
  <% if(locals.usuario.user){ %> 
    <%- include('partials/sidebar.ejs') %>
  <% }else{ %>
    <%- include('partials/sidebar-noauth.ejs') %>
  <% } %> 

  <!-- modal login -->
  <%- include('partials/modal-login.ejs') %> 


    <% if(locals.mensajes){ %>
      <div class="content-alerts">
      <% const categoria = Object.keys(locals.mensajes) %> 
      <% if(categoria.length){ %>
        <% locals.mensajes[categoria].forEach(alerta => { %> 
          <div class="alertas alert fade show">
            <p class="alerta <%=  categoria %>"><%= alerta %> 
              <button type="button" class="close ml-4" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" style="color:#fff;">&times;</span>
              </button>
            </p>
          </div>
        <% }) %> 
      <% } %> 
    </div>
    <% } %>


  <%-body%>

  <%- include('partials/footer.ejs') %> 



